<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/header"
    tools:context="com.example.appslure.loop.HelpActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1ebd9d"
        android:minHeight="?attr/actionBarSize">

       >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff"

            />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="50dp"
        android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/vehicle_img"

            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="For any issues reach out to us at:"
            android:textColor="#34495e"
            android:textSize="18dp"



            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/call1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/call_btn"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/number"
                android:layout_gravity="center"

                />
            <TextView
               android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="9716722592"
                android:textSize="22dp"
                android:textColor="#34495e"

                />
            </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#34495e"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Send us a short email using comments section below"
            android:textSize="18dp"
            android:textColor="#34495e"
            />


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments :"
            android:textSize="22dp"
            android:textColor="#34495e"
            />

        <EditText
            android:id="@+id/message"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="wirte your comments here"
            android:singleLine="true"
            android:background="@android:color/transparent"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:background="#34495e"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp">

            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
 </ScrollView>

<Button
    android:id="@+id/submitBtn"
    android:layout_width="fill_parent"
    android:background="#1ebd9d"
    android:layout_alignParentBottom="true"
    android:text="Submit"
    android:textColor="#ffffff"
    android:layout_height="50dp" />


</RelativeLayout>
