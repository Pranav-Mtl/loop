<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:background="@color/WhiteColor"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="@drawable/trip_back">

        <!-- Left Main Inner layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:weightSum="2"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- Left Inner top layout -->

            <LinearLayout
                android:id="@+id/trip_ll_left_top"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/trip_left_top_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    ></ImageView>
                <TextView
                    android:id="@+id/trip_left_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/TextColor"
                    android:textSize="@dimen/adapter_text_size"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteColor"
                />

            <!-- Left Inner Bottom layout -->
            <LinearLayout
                android:id="@+id/trip_ll_left_bottom"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/trip_left_bottom_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/trip_left_bottom_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/TextColor"
                    android:textSize="@dimen/adapter_text_size"
                    android:paddingLeft="5dp"
                    android:singleLine="false"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/WhiteColor"
            />

        <!-- Right Main Inner Layout -->
        <LinearLayout
            android:id="@+id/trip_ll_right"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            >
            <TextView
                android:id="@+id/trip_tv_date_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/adapter_text_size"
                android:padding="5dp"
                android:textColor="@color/TextColor"
                />
            <TextView
                android:id="@+id/trip_start_point"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/adapter_text_size"
                android:drawableLeft="@drawable/ic_trip_pick"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/TextColor"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_trip_down"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/trip_end_point"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/adapter_text_size"
                android:paddingLeft="5dp"
                android:textColor="@color/TextColor"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_trip_drop"
                />
            <TextView
                android:id="@+id/trip_cost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/adapter_text_size"
                android:padding="5dp"
                android:textColor="@color/TextColor"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_trip_credit"
                />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>