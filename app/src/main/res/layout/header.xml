<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/MenuHeader"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
      >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"

            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_side_setting"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/drawer_item_header_size"
            android:textStyle="normal"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_side_credit"
            />
        <TextView
            android:id="@+id/paytm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"

            android:layout_marginTop="5dp"

            android:textSize="@dimen/drawer_item_size"
            android:textStyle="normal"
            />
    </LinearLayout>


</LinearLayout>
