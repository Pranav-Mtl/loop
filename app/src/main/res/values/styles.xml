<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/WhiteColor</item>
    </style>

    <style name="Toolbar_Theme">
        <item name="colorControlNormal">@color/WhiteColor</item>
    </style>

    <style name="ThemeSpinnerDrop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/spinner_style</item>
    </style>

    <style name="spinner_style" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#000000</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerHeight">.3dp</item>

        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_yellow</item>
        <item name="android:indeterminateDrawable">@drawable/star_gray</item>
    </style>


</resources>
